<div class="row">
	
	<%= render 'left' %>
	
	<div class="span8">
		
		<div class="btn-toolbar">
			<div class="btn-group">	
				<%= link_to " назад", documents_path, :class => "btn" %>
			</div>
			
			<div class="btn-group">	
				<a class="btn btn-success" href="javascript:if(window.print)window.print()" style="margin-left: 20px"><%= image_tag('print.png') %></a>
			</div>
		</div>
		
		<div class="new-wrap">
			<%= form_for(@document) do |f| %>
			<div class="new-header">
				<span class="header"><%= @document.title %> | <%= Russian::strftime(@document.created_at, "%d %B %Y, %H:%M") %></span>
				<span class="label label-info" style="float: right; margin-top: 7px">Письмо</span>
			</div>
			
			<div class="new-title">
				<b>Организация-отправитель: </b><%= organzation_title_by_user_id(@document.user_id) %>
			</div>
			
			<div class="new-title">
				<b>Согласующий: </b><%= link_to doc_user(@document.approver_id), user_path(@document.approver_id) %>
			</div>
			
			<% if @document.organization_id? %>
			<div class="new-title"><b>Организация-получатель: </b><%= organization(@document.organization_id) %><!--<span style="margin-left: 60px;">Исходящий №</span><input class="input-medium" type="text" placeholder=".input-medium">--></div>
			<% end %>
			
			<div class="new-text-wrap">
				<%= @document.text.html_safe %>
			</div>
			
			
			<div class="btn-toolbar">
				
				<% unless @document.prepared? %>
				<div class="btn-group">	
					<%= link_to "подготовить", prepare_document_path(@document), :class => "btn btn-success" %>
				</div>
				<% end %>
				
				<% unless @document.approved? || @document.deleted? %>
				<div class="btn-group"   style="margin-right: 10px;">	
					<%= link_to 'Редактировать', edit_document_path(@document), :class => "btn btn-success" %>
				</div>
				<% end %>
				
				<% if for_send(@document) %>
				<div class="btn-group"   style="margin-right: 10px;">	
					<%= link_to 'Отправить', send_document_document_path(@document), :class => "btn btn-success" %>
				</div>
				<% else %>
				<div class="btn-group"   style="margin-right: 10px;">	
					<%= link_to 'Отправить', "#", :class => "btn disabled" %>
				</div>
				<% end %>
				
				<% if for_approve(@document) %>
				<div class="btn-group"   style="margin-right: 10px;">	
					<%= link_to 'Подписать', approve_document_path(@document), :class => "btn btn-success" %>
				</div>
				<% end %>
				
				<% if for_callback(@document) %>
				<div class="btn-group"   style="margin-right: 10px;">	
					<%= link_to 'Отозвать', callback_document_path(@document), :class => "btn" %>
				</div>
				<% end %>
				
				<% unless @document.sent? || @document.deleted? %>
				<div class="btn-group"   style="margin-right: 10px;">	
					<%= link_to 'Удалить', delete_document_path(@document), :class => "btn btn-danger" %>
				</div>
				<% end %>
			
			</div>
		
			<% end %>
	</div>	
</div>
