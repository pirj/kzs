<div class="row">
	<div class="span2">
		<ul class="nav doc-left">
		  <li class="nav-header">Папки</li>
		  <li><%= link_to "Входящие", documents_path %></li>
		  <li><%= link_to "Отчеты", documents_path(:type => "report") %></li>
		  <li><%= link_to "Черновики", documents_path(:type => "draft") %></li>
		  <li><%= link_to "Отправленные", documents_path(:type => "sent") %></li>
		  <li><%= link_to "Корзина", documents_path(:type => "trash") %></li>	
		</ul>
	</div>
	
	<div class="span8">
		
		<div class="btn-toolbar">
		
		<div class="btn-group">
		  <a class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#">
		    Создать
		    <span class="caret"></span>
		  </a>
		  <ul class="dropdown-menu">
		    <li><%= link_to "Письмо", new_document_path %></li>	
		  </ul>
		</div>
		
		<div class="btn-group">	
					
			<a class="btn btn-success" href="javascript:location.reload(true);"><%= image_tag('refresh.png') %></a>
		</div>
		
		<div class="btn-group">
		  <a class="btn btn-success dropdown-toggle" data-toggle="dropdown" href="#">
		    Сортировать
		    <span class="caret"></span>
		  </a>
		  <ul class="dropdown-menu">
		      <li><%= link_to "Входящие", documents_path %></li>
			  <li><%= link_to "Отчеты", documents_path(:type => "report") %></li>
			  <li><%= link_to "Черновики", documents_path(:type => "draft") %></li>
			  <li><%= link_to "Отправленные", documents_path(:type => "sent") %></li>
		  </ul>
		</div>
		
		<div class="btn-group">			
			<a class="btn" href="#">В корзину</a>
		</div>
		
		</div>
		
		<table class="table table-striped">
		  	 <tr>
				<th></th>
			    <th>Отправитель</th>
			    <th>Тип</th>
			    <th>Тема письма</th>
			    <th>Детали</th>
			    <th style="width: 110px">Дата/Время</th>
			  </tr>

			<% @documents.each do |document| %>
			  <tr>
				<td><%= link_to '#', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			    <td><%= doc_user(document.user_id) %></td>
			    <td><span class="label label-info">Письмо</span></td>
			    <td><%= document.title %></td>
			    <td><%= link_to "Подробнее", document %></td>
			    <td><%= Russian::strftime(document.created_at, "%d %B %Y %H:%M") %></td>
			  </tr>
			<% end %>
		</table>
		
		
	</div>
	
	
</div>
