<% unless @document.task_list.tasks.blank? %>
    Чек-лист исполнен на: <%= @document.task_list.progress  %>%<br>
<% end %>

<% @document.task_list.tasks.each.with_index(1) do |task, i| %>
  <%= i %>)  <%= task.task %>
  <% if task.executor_organization_id == current_user.organization_id && task.completed == false %>
    <%= link_to "Выполнить", execute_task_path(task), :class=> "btn" %>
  <% elsif task.completed? %>
   | Выполнено <br>
  <% else %>
  <% nil %>
  <% end %>
  <br>
<% end %>
<br>