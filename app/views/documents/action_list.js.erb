    $('li.dropdown:last').append('<%= j (render 'documents/action_list.html.haml', prepare: @prepare, approve: @approve,
                                                                       send_document: @send_document ) %>');
<% else %>
    $('li.dropdown:last').append('<%= j (render 'documents/action_list.html.haml', document_id: @document_id, show: @show, create_draft: @create_draft,
                                                                       edit: @edit, prepare: @prepare, approve: @approve,
                                                                       send_document: @send_document, reply: @reply, copy: @copy ) %>');
<% end %>
