<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Organization</th>
    <th>Recipient</th>
    <th>Deadline</th>
    <th>Text</th>
    <th>File</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.title %></td>
    <td><%= document.user_id %></td>
    <td><%= document.organization_id %></td>
    <td><%= document.recipient %></td>
    <td><%= document.deadline %></td>
    <td><%= document.text %></td>
    <td><%= document.file %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Document', new_document_path %>

<h2><%= @document.title %></h2>

<p>
  <b>Отправитель:</b>
	<%= doc_user(@document.user_id) %>
</p>

<p>
  <b>Организаиция:</b>
  <%= organization(@document.organization_id) %>
</p>

<p>
  <b>Получатель:</b>
  <%= doc_user(@document.recipient_id) %>
</p>

<p>
  <b>Срок исполнения:</b>
  <%= @document.deadline %>
</p>

<p>
  <b>Содержание:</b>
  <%= @document.text.html_safe %>
</p>


<p>
  <b>Приложение:</b>
	<% if @document.file? %>
  		<%= link_to @document.file_file_name, @document.file.url(:original, false) %>
	<% else %>
	<i>Приложение отсутствует</i>
	<% end %>
</p>

<%= link_to 'К документам', documents_path %> | <%= link_to 'Редактировать', edit_document_path(@document) %>

