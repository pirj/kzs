<div class="row">
	
 <%= render 'left' %>
	
	<div class="span8">

  <%= render 'user' %>
  
		<h1 class="doc_header">
		  <% if action?('new') %>
			  <% if params[:type == 'mail'] %>
				Новое письмо
			  <% elsif params[:type == 'writ'] %>
				Новое распоряжение
			  <% else%>
			    Новое письмо
			  <% end %>
			<% end %>
		<span class="caret"></span></h1>


	<div class="btn-toolbar">
			<%= link_to "Назад", :back, :class => "btn" %>
      <!-- <%= link_to "Шаблоны", "#", :class => "btn" %>
      <%= link_to "Черновики", drafts_documents_path, :class => "btn" %> -->
	</div>
	
	<%= form_for(@document) do |f| %>
	
	<!-- hidden_fields -->
	<% if action?('new') %>
	<%= f.hidden_field :document_type, :value => params[:type] %>
	<% elsif action?('reply') %>
	<%= f.hidden_field :document_type, :value => @original_document.document_type %>
	<% elsif %>
	<%= f.hidden_field :document_type, :value => @document.document_type %>
	<% end %>
	
	<%= f.hidden_field :document_conversation_id, :value => @document_conversation_id %>
  <!-- end -->
	
	<%= f.text_field :title, :class => 'input-xxlarge', :placeholder => 'Тема письма' %>
	
	<%= f.collection_select(:organization_ids, Organization.where('id != ?', current_user.organization_id), :id, :title, {:include_blank => false, :selected => @document.organization_id}, {multiple: true, :style=>'width:544px;', :'data-placeholder' => "Организация-получатель"}) %>
	<%= f.collection_select(:approver_ids, @approvers, :id, :first_name_with_last_name, {:selected => @document.approver_id}, {multiple: true, :style=>'width:544px', :'data-placeholder' => "Контрольное-лицо"}) %>
	<%= f.collection_select(:executor_ids, @executors.all, :id, :first_name_with_last_name, {:selected => @document.executor_id}, {multiple: true, :style=>'width:544px', :'data-placeholder' => "Исполнитель", :id => "document_executor_ids"}) %>
	<%= f.text_area :text, :class => 'input-xxlarge letter_input', :placeholder => 'Текст письма', :rows => "20" %>
	
	<%= render 'actions_form', :f => f %>

	<% end %>
</div>
