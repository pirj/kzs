<div class="row">
	
	<%= render 'left' %>
	
	<div class="span8">
		
		<div class="btn-toolbar">
			<div class="btn-group">	
				<%= link_to " назад", :back, :class => "btn" %>
			</div>
			
			<div class="btn-group">	
				<a class="btn btn-success" href="javascript:if(window.print)window.print()" style="margin-left: 20px"><%= image_tag('print.png') %></a>
			</div>
		</div>
		
		<div class="new-wrap">
			<%= form_for(@document) do |f| %>
			<div class="new-header"><span class="header">Новое письмо | <%= Russian::strftime(Time.new, "%d %B %Y %H:%M") %></span><span class="label label-info" style="float: right; margin-top: 7px">Письмо</span></div>
			
			<% if current_user.organization_id? %>
			<div class="new-title">Организация-отправитель <span style="padding-left: 15px; font-weight: bold;"><%= organzation_title(current_user) %></span></div>
			<% end %>
			
			<div class="new-title">Организация-получатель <%= f.collection_select(:organization_id, Organization.all, :id, :title) %> <!--<span style="margin-left: 60px;">Исходящий №</span><input class="input-medium" type="text" placeholder=".input-medium">--></div>
			
			<div class="new-title">Согласовать<%= f.collection_select(:approver_id, User.superusers_from_orgranization(current_user.organization_id), :id, :first_name_with_last_name) %> <!--<span style="margin-left: 60px;">Исходящий №</span><input class="input-medium" type="text" placeholder=".input-medium">--></div>
			
			<div class="new-title">Тема письма <%= f.text_field :title, :class => 'input-xxlarge', :placeholder => 'введите тему письма...' %></div>
			
			
			
			
			
			<div class="new-text-wrap">
				<%= f.cktext_area :text, :class => "text", :ckeditor => {:toolbar => "mini"} %>
			</div>
			
			<div class="btn-toolbar">
				<div class="btn-group">	
					<%= f.submit "подготовить", :class => "btn btn-success", :name => "prepare" %>
				</div>
				
				<div class="btn-group" style="margin-left: 10px;">	
					<%= f.submit "в черновики", :class => "btn btn-primary" %>
				</div>
				
				<% unless @document.sent? || action?('new') %>
				<div class="btn-group"   style="margin-left: 10px">	
					<%= link_to 'Удалить', delete_document_path(@document), :class => "btn btn-danger" %>
				</div>
				<% end %>

				

			</div>
		
			<% end %>
	</div>	
</div>
