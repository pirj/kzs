<td colspan="9" class="inform">
  <div class="col-md-8">
    <ul class="doc-info">
      <li>
        <span class="title">Номер и дата:</span><span class="value"><a href="#"><%= @document.id %></a> / <%= if @document.sent then
                                                                                                                @document.sent_date.strftime('%d.%m.%Y')
                                                                                                              else
                                                                                                                'Дата не присвоена'
                                                                                                              end %></span>
      </li>
      <li><span class="title">Тема:</span>
						<span class="value">
						  <span class="h3"><%= @document.title %></span>
							<ol class="breadcrumb">
                <li><%= link_to organization_full_title(@document.sender_organization_id), organization_path(@document.sender_organization_id), :target => '_blank' %></li>
                <li><%= link_to organization_full_title(@document.organization_id), organization_path(@document.organization_id), :target => '_blank' %></li>
              </ol>
						</span>
      </li>
      <li>
        <span class="title valign-mid">Исполнитель:</span>

        <div class="user value">
          <span class="photo"> <img alt="" src="data:image/png;base64,"/></span>
          <a href="#" class="name dropdown" data-toggle="dropdown"><%= user_with_full_name(@document.executor_id) %>
          <span class="dropdown-arr"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <!--<li class="title"><a href="#"><%= user_with_full_name(@document.executor_id) %> </a> Инженер ПТО, ООО «Циклон»</li>-->
            <li class="photo">
              <img alt="" src="data:image/png;base64,"/>
            </li>
            <li><a href="#" class="icon-ok">Написать соообщение</a></li>
            <li><a href="#" class="icon-clock">Личная страница</a></li>
            <li><a href="#" class="icon-block-1">Отмена</a></li>
          </ul>
        </div>
      </li>
      <li><span class="title valign-mid">Отправитель:</span>
        <div class="user value">
          <span class="photo"> <img alt="" src="data:image/png;base64,"/></span><a href="#" class="name"><%= user_with_full_name(@document.user_id) %>
          <span class="dropdown-arr"></span>
          </a>
        </div>
      </li>
      <% unless @document.document_attachments.blank? %>
          <li class="doc-format"><span class="title">Приложения:</span>
            <ul class="value doc-format-list">
              <% @document.document_attachments.each do |a| %>
                  <li>
                    <i></i> <%= link_to a.attachment_file_name, a.attachment.url(:original, false), :target => '_blank' %>
                  </li>
              <% end %>
            </ul>
          </li>
      <% end %>
    </ul>
    <div class="nav-pills nav controls">
      <!--<a class="btn btn-default">История переписки</a>-->
      <a class="btn btn-default" href="/documents/<%= @document.id %>">Открыть</a>
    </div>
  </div>
  <div class="col-md-4">
    <div class="view-main-doc">
      <div class="overlay"><a href="/documents/<%= @document.id %>.pdf" target="_blank" class="zoom"></a></div>
      <!--<a href="" class="icon-chat-empty"></a>-->

      <iframe style="width: 190px; height: 270px;" src=<%= @document.document_attachments.first.attachment.url(:pdf_thumbnail) %>/>
      </iframe>

    </div>
  </div>
  <!--<div class="inform-hide">Close</div>-->
</td>