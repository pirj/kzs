<fieldset>
  <% if f.object.new_record? %>	
    <%= f.file_field :attachment %>
  <% else %>
    <b><%= link_to f.object.attachment_file_name, f.object.attachment.url(:original, false), :target => '_blank' %></b	>
  <% end %>

  <%= f.hidden_field :_destroy %>
  <%= link_to "удалить", '#', class: "remove_fields" %>
</fieldset>