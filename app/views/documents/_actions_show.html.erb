	<!--<% if for_callback(@document) %>-->
	<!--<div      style="margin-right: 10px;">	-->
		<!--<%= link_to 'Отозвать', callback_document_path(@document), :class => "btn btn-sm" %>-->
	<!--</div>-->
	<!--<% end %>-->
	
	
	<% if for_execution(@document) %>
	<div      style="margin-right: 10px;">	
		<%= link_to 'Исполнить', execute_document_path(@document), :class => "btn btn-sm btn-success" %>
	</div>
	<% end %>
	
