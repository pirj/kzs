<div class="btn-toolbar">	
	<% unless @document.prepared? %>
	<div class="btn-group">	
		<%= link_to "подготовить", prepare_document_path(@document), :class => "btn btn-success" %>
	</div>
	<% end %>
	
	<% unless @document.approved? || @document.deleted? %>
	<div class="btn-group"   style="margin-right: 10px;">	
		<%= link_to 'Редактировать', edit_document_path(@document), :class => "btn btn-success" %>
	</div>
	<% end %>
	
	<% if for_send(@document) %>
	<div class="btn-group"   style="margin-right: 10px;">	
		<%= link_to 'Отправить', send_document_document_path(@document), :class => "btn btn-success" %>
	</div>
	<% end %>
	
	
	<% if can? :approve, @document %>
	<% if for_approve(@document) %>
	<div class="btn-group"   style="margin-right: 10px;">	
		<%= link_to 'Подписать', approve_document_path(@document), :class => "btn btn-success" %>
	</div>
	<% end %>
	<% end %>
	
	<% if @document.sender_organization_id != current_user.organization_id && @document.opened %>
	<div class="btn-group"   style="margin-right: 10px;">	
		<%= link_to 'Ответить', reply_document_path(@document), :class => "btn btn-success" %>
	</div>
	<% end %>
	
	<% if for_callback(@document) %>
	<div class="btn-group"   style="margin-right: 10px;">	
		<%= link_to 'Отозвать', callback_document_path(@document), :class => "btn" %>
	</div>
	<% end %>
	
	
	<% if for_execution(@document) %>
	<div class="btn-group"   style="margin-right: 10px;">	
		<%= link_to 'Исполнить', execute_document_path(@document), :class => "btn btn-success" %>
	</div>
	<% end %>
	
</div>