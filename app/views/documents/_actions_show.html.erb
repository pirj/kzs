
  
  <% if @document.draft? && @document.user_id == current_user.id %>
	<div   >	
		<%= link_to "в черновики", to_drafts_document_path(@document), :class => "btn btn-sm" %>
	</div>
	<% end %>
	
	<% unless @document.approved? || @document.deleted? %>
	<div      style="margin-right: 10px;">	
		<%= link_to 'Редактировать', edit_document_path(@document), :class => "btn btn-sm" %>
	</div>
	<% end %>
  
	<% unless @document.prepared? %>
	<div   >	
		<%= link_to "подготовить", prepare_document_path(@document), :class => "btn btn-sm btn-success" %>
	</div>
	<% end %>
	
	<% if for_send(@document) %>
	<div      style="margin-right: 10px;">	
		<%= link_to 'Отправить', send_document_document_path(@document), :class => "btn btn-sm btn-success" %>
	</div>
	<% end %>

	
	<% if can? :approve, @document %>
	<% if for_approve(@document) %>
	<div      style="margin-right: 10px;">	
		<%= link_to 'Подписать', approve_document_path(@document), :class => "btn btn-sm btn-success" %>
	</div>
	<% end %>
	<% end %>
	
	
	<% if @document.sender_organization_id != current_user.organization_id && @document.opened && @document.document_type == 'mail' %>
	<div      style="margin-right: 10px;">	
		<%= link_to 'Ответить', reply_document_path(@document), :class => "btn btn-sm btn-success" %>
	</div>
	<% end %>
