newFormContainer = $('.js-new-task');
<%- if resource.valid? %>
window.app.ganttView.reloadGantt();
newFormContainer.modal('toggle');
newFormContainer.empty();

<%- else %>

newFormContainer.html(("<%= j render 'tasks/tasks/form', remote: true, resource: resource %>"));
//$('.js-new-task').modal('toggle');
newFormContainer.find('.js-datepicker').datepicker(global.datepicker);
newFormContainer.find('.js-chosen').chosen(global.chosen);
$('.modal-backdrop.in').hide();

<%- end %>