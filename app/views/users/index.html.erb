
  <h2>Сотрудники</h2>

  <table class="table table-striped">
  <tr>
    <th>Имя</th>
    <th>Фамилия</th>
	<th>Email</th>
    <th>Детали</th>
    <th>#</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
	<td><%= user.last_name %></td>
	<td><%= user.email %></td>
    <td><%= link_to 'Подробнее', user %></td>
    <td><%= link_to '#', edit_user_path(user) %></td>
  </tr>
<% end %>
</table>

<%= link_to "Добавить сотрудника", new_user_path %>


