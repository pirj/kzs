<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>ФИО</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :position %>
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :organization %>
    <%= f.collection_select(:organization_id, Organization.all, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :division %>
    <%= f.text_field :division %>
  </div>
  <div class="field">
    <%= f.label :access_level %>
	<%= f.select :access_level, options_for_select(User::ACCESS_LEVELS, @user.access_level) %>
  </div>
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :info %>
    <%= f.text_area :info, :rows => '3' %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :dob %>
    <%= f.text_field :dob %>
  </div>
  <div class="field">
    <%= f.label :permit %>
    <%= f.text_field :permit %>
  </div>
  <div class="field">
    <%= f.label :work_status %>
	<%= f.select :work_status, options_for_select(User::WORK_STATUSES, @user.work_status) %>
  </div>


  <div class="actions">
    <%= f.submit 'Создать', :class => 'btn btn-primary' %>
  </div>
<% end %>
