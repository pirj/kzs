<table class="table permits_table" style="font-size: 12px; width: 900px;">
  <tr>
    <% if params[:scope] == 'for_print' %>
        <th style="width: 5%"></th>
    <% end %>
    <th style="width: 9%"><%= sortable "id", "№" %></th>
    <th style="width: 36%">Фамилия</th>
    <th style="width: 12%"><%= sortable "permit_type", "Тип" %></th>
    <th style="width: 12%"><%= sortable "start_date", "Начало" %></th>
    <th style="width: 12%"><%= sortable "expiration_date", "Конец" %></th>
    <th style="width: 12%"><%= sortable_status %></th>
    <!--<th style="width: 8%">Детали</th>-->
  </tr>

  <% @permits.each do |permit| %>
      <tr id="<%= permit.id %>">
        <% if params[:scope] == 'for_print' %>
            <td class="not_this">
              <label class="control checkbox"><%= check_box_tag "permit_ids[]", permit.id, nil, :class => 'permit_operation' %>
                <span class="checkbox-label"></span>
              </label>
            </td>
        <% end %>
        <td><%= permit.id %></td>
        <td>

          <% if permit.permit_type == "vehicle" %>
              <%= link_to permit do %>
                  <%= permit.vehicle.brand %>
                <%= permit.vehicle.model %>
                  <% end %>
              <br>
                <span style=" display: inline-block; font-weight: bold; border: 1px #000000 solid;">
                     <span style=" display: inline-block;
                             border-right: 1px #000000 solid;
                             font-size: 16px;
                             padding: 0 6px;
                             padding-bottom: 4px;">
                  <%= permit.vehicle.register_sn[0] %>
                       <span style="font-size: 20px;">
                         <%= permit.vehicle.register_sn[1..3] %>

                         </span>
                       <%= permit.vehicle.register_sn[4..5] %>
                       </span>
                   <span style="display: inline-block;
                           font-size: 18px;
                           background-image: url(data:image/png;base64,);
                           background-position: bottom center;
                           background-repeat: no-repeat;
                           width: 30px;
                           text-align: center;
                           vertical-align: top;
                           padding-bottom: 3px;
                           position: relative;
                           bottom: 3px;
                           padding-right: 5px; ; min-height:28px;">

                             <%= permit.vehicle.sn_region %>

                    </span>
</span>


          <% elsif permit.permit_type == "daily"  %>

              <%= link_to permit do %>

                  <%= permit.daily_pass.last_name %>
                  <%= permit.daily_pass.first_name %>
              <%end%>


          <% elsif permit.permit_type == "user"  %>

              <%= link_to permit do %>
                <%= permit.user.try(:last_name) %>
                <%= permit.user.try(:first_name) %>

              <%end%>
              <div style="font-size: 13px; color: #999999;"><%= permit.user.try(:position) %></div>
          <% end %>


        </td>
        <td>
          <% if permit.permit_type == "user" %>
              <%= image_tag('old/propusk-man.png') %>
          <% elsif permit.permit_type == "vehicle" %>
              <%= image_tag('old/propusk-car.png') %>
          <% elsif permit.permit_type == "daily" %>
              <%= image_tag('old/propusk-daily.png') %>
          <% end %>
        </td>
        <td><%= permit.start_date.strftime("%d.%m.%y") if permit.start_date %></td>
        <td><%= permit.expiration_date.strftime("%d.%m.%y") if permit.expiration_date %></td>
        <td class="status "><%= permit_status(permit) %></td>
        <!--<td><%= link_to "Подробнее", permit %></td>-->
      </tr>
  <% end %>
</table>