<table class="table permits_table" style="font-size: 12px; width: 900px;">
  	 <tr>
  	  <% if params[:scope] == 'for_print' %>
  	    <th style="width: 5%"></th>
  	  <% end %>
	    <th style="width: 5%"><%= sortable "id", "№" %></th>
	    <th style="width: 5%"><%= sortable "organization_id", "Организация" %></th>
	    <th style="width: 16%">Фамилия</th>
			<th style="width: 5%"><%= sortable "permit_type", "Тип" %></th>
			<th style="width: 6%"><%= sortable "start_date", "Начало" %></th>
			<th style="width: 6%"><%= sortable "expiration_date", "Конец" %></th>
			<th style="width: 8%"><%= sortable_status %></th>
	    <th style="width: 8%">Детали</th>
	  </tr>

	<% @permits.each do |permit| %>
	  <tr id="<%= permit.id %>">
	    <% if params[:scope] == 'for_print' %>
	    <td class="not_this">	      
        <label class="control checkbox"><%= check_box_tag "permit_ids[]", permit.id, nil, :class => 'permit_operation' %>
          <span class="checkbox-label"></span>
        </label>
      </td>
      <% end %>
			<td><%= permit.id %></td>
			<td><%= organization_short_title(permit.organization_id) %></td>
			<td>
			  <% if permit.permit_type == "user" %>
          <%= permit.user.try(:last_name) %>
        <% elsif permit.permit_type == "vehicle" %>
          <% if permit.way_bill %>
            Согласно путевого листа
          <% else %>
            <%= permit.vehicle.users.first.last_name %>
          <% end %>
        <% elsif permit.permit_type == "daily" %>
          <%= permit.daily_pass.try(:last_name) %>
        <% end %>
			</td>
			<td>
			  <% if permit.permit_type == "user" %>
          <%= image_tag('propusk-man.png') %>
        <% elsif permit.permit_type == "vehicle" %>
          <%= image_tag('propusk-car.png') %>
        <% elsif permit.permit_type == "daily" %>
          <%= image_tag('propusk-daily.png') %>
        <% end %>
			</th>
			<td><%= permit.start_date.strftime("%d.%m.%y") if permit.start_date %></th>
			<td><%= permit.expiration_date.strftime("%d.%m.%y") if permit.expiration_date %></th>
			<td><%= permit_status(permit) %></td>
	    <td><%= link_to "Подробнее", permit %></td>
	  </tr>
	<% end %>
</table>