<table class="table dynamic-table default-table" id="<%= @controller %>">
  <thead>
  <tr>
    <th style="width: 5%"><label class=""><%= check_box_tag "permits_ids[]", nil, nil, :id => "select_all_permits" %>
      <span class="checkbox-label"></span>
    </label></th>
    <th style="width: 8%"><%= sortable "id", "№" %></th>
    <th style="width: 30%">Субъект</th>
    <th style="width: 10%"><%= sortable "permit_type", "Тип" %></th>
    <th style="width: 14%"><%= sortable "start_date", "Начало" %></th>
    <th style="width: 14%"><%= sortable "expiration_date", "Конец" %></th>
    <th style="width: 12%" class="status"><%= sortable_status %></th>
    <!--<th style="width: 8%">Детали</th>-->
  </tr>
  </thead>
  <tbody>
  <% @permits.each do |permit| %>
      <tr id="<%= permit.id %>">
        <td class="not_this">
          <label class="control checkbox"><%= check_box_tag "permit_ids[]", permit.id, nil, :class => 'permit_operation' %>
            <span class="checkbox-label"></span>
          </label>
        </td>
        <td> <%= link_to permit do %>
              <%= permit.number %>
          <% end %>
        </td>
        <td>

          <% if permit.permit_type == "vehicle" %>
              <%= link_to permit do %>
                  <%= permit.vehicle.brand %>
                  <%= permit.vehicle.model %>
              <% end %>
              <br>


              номер
<%= permit_auto_number(permit)%>

          <% elsif permit.permit_type == "daily" %>

              <%= link_to permit do %>

                  <%= permit.daily_pass.last_name %>
                  <%= permit.daily_pass.first_name %>
              <% end %>


          <% elsif permit.permit_type == "user" %>

              <%= link_to permit do %>
                  <%= permit.user.try(:last_name) %>
                  <%= permit.user.try(:first_name) %>

              <% end %>
              <div style="font-size: 13px; color: #999999;"><%= permit.user.try(:position) %></div>
          <% end %>


        </td>
        <td>
          <% if permit.permit_type == "user" %>
              <%= image_tag('/assets/propusk-man.png') %>
          <% elsif permit.permit_type == "vehicle" %>
              <%= image_tag('/assets/propusk-car.png') %>
          <% elsif permit.permit_type == "daily" %>
              <%= image_tag('/assets/propusk-daily.png') %>
          <% end %>
        </td>
        <td><%= permit.start_date.strftime("%d.%m.%y") if permit.start_date %></td>
        <td><%= permit.expiration_date.strftime("%d.%m.%y") if permit.expiration_date %></td>
        <td class="status "><%= permit_status(permit) %></td>
      <tr class="inform">
        <td colspan="4"></td>
        <td colspan="2">
          <% if permit.permit_type == 'daily' %>
              Разовый пропуск
          <% else %>
              Общий срок действия: <%= permit_remaining(permit) %>
          <% end %>
        </td>
        <td colspan="1"></td>

      </tr>
      <!--<td><%= link_to "Подробнее", permit %></td>-->
      </tr>
  <% end %>
  </tbody>
</table>