<div class="row">

	<div class="span12">
		<%= render 'shared/user' %>
		<h1 class="doc_header">Редактирование <span class="caret"></span></h1>

      <%= simple_form_for @permit, html: {class: 'form-horizontal'}, defaults: { input_wrapper_html: { class: 'col-sm-8' }, label_html: { class: 'col-sm-4' }, wrapper: :inline } do |f| %>
         <p>vit</p>
      <% if @permit.errors.any? %>
        <div id="error_explanation">
          <h4 style="color: #9a0000;">Пожалуйста, исправьте некорректные поля:</h4>
          <ul>
          <% @permit.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= render 'permit_form_fields', f: f %>


      <div class="actions">
        <%= f.submit 'Внести изменения', :class => 'btn btn-primary' %>
      </div>

    <% end %>
		
		
	</div>
	
	
</div>


