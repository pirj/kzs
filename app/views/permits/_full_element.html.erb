<td colspan="8" class="inform">
  <div style="position: relative">
    <table class="sub-table">
      <tr>
        <td width="64"></td>
        <td width="79"><%= @permit.number %></td>
        <td width="317"><% if @permit.permit_type == "vehicle" %>
            <%= link_to @permit do %>
                <%= @permit.vehicle.brand %>
              <%= @permit.vehicle.model %>
                <% end %>
            <br>
              <span style=" display: inline-block; font-weight: bold; border: 1px #000000 solid;">
                   <span style=" display: inline-block;
                           border-right: 1px #000000 solid;
                           font-size: 16px;
                           padding: 0 6px;
                           padding-bottom: 4px;">
                <%= @permit.vehicle.register_sn[0] %>
                     <span style="font-size: 20px;">
                       <%= @permit.vehicle.register_sn[1..3] %>

                       </span>
                     <%= @permit.vehicle.register_sn[4..5] %>
                     </span>
                 <span style="display: inline-block;
                         font-size: 18px;
                         background-image: url(data:image/png;base64,);
                         background-position: bottom center;
                         background-repeat: no-repeat;
                         width: 30px;
                         text-align: center;
                         vertical-align: top;
                         padding-bottom: 3px;
                         position: relative;
                         bottom: 3px;
                         padding-right: 5px; ; min-height:28px;">

                           <%= @permit.vehicle.sn_region %>

                  </span>
</span>


        <% elsif @permit.permit_type == "daily"  %>

            <%= link_to @permit do %>

                <%= @permit.daily_pass.last_name %>
                <%= @permit.daily_pass.first_name %>
            <%end%>


        <% elsif @permit.permit_type == "user"  %>

            <%= link_to @permit do %>
              <%= @permit.user.try(:last_name) %>
              <%= @permit.user.try(:first_name) %>

            <%end%>
            <div style="font-size: 13px; color: #999999;"><%= @permit.user.try(:position) %></div>
        <% end %></td>
        <td width="107">
          <% if @permit.permit_type == "user" %>
              <%= image_tag('/assets/propusk-man.png') %>
          <% elsif @permit.permit_type == "vehicle" %>
              <%= image_tag('/assets/propusk-car.png') %>
          <% elsif @permit.permit_type == "daily" %>
              <%= image_tag('/assets/propusk-daily.png') %>
          <% end %>
        </td>
        <td width="106"><%= @permit.start_date.strftime("%d.%m.%y") if @permit.start_date %></td>
        <td width="110"><%= @permit.expiration_date.strftime("%d.%m.%y") if @permit.expiration_date %></td>
        <td class="status"><%= permit_status(@permit) %></td>
      </tr>
    </table>
    <!--<div class="progress">-->
      <!--<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="30" aria-valuemax="100">-->
        <!--<span class="sr-only">100%</span>-->
      <!--</div>-->

    <!--</div>-->
    <!--<span class="progress-label">Общий срок действия: 12 месяцев</span>-->
  </div>
  
  <div class="nav-pills nav controls">

   <!--<a class="btn btn-default">История переписки</a>-->
    <a class="btn btn-default" href="/permits/<%= @permit.id %>">Открыть</a>

  </div>

</td>