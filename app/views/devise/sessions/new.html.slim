    .col-sm-4.col-sm-offset-4
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form" }) do |f|
        .row
          .col-sm-9
            .form-group
              = f.text_field :login, :placeholder => 'логин', :class => "form-control"
            .form-group
              = f.password_field :password, :placeholder => 'пароль', :class => "form-control"

          .col-sm-3
            = f.submit "Вход", :class => 'btn btn-default'

