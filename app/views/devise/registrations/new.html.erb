<h2>Создание нового пользователя</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <label for="user_name">ФИО</label>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <input id="user_photo" name="user[photo]" type="file" title="Выберите фото" />
  </div>
 
  <br/>

  <div class="field">
	<label for="user_email">Электронная почта</label>
  	<%= f.email_field :email %>
  </div>

  <div class="field">
    <label for="user_password">Пароль</label>
  	<%= f.password_field :password %>
  </div>

  <div class="field">
    <label for="user_password_confirmation">Подтверждение пароля</label>
  	<%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <label for="user_phone">Телефон</label>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <label for="user_position">Должность</label>
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <label for="user_organization_id">Организация</label>
    <%= f.collection_select(:organization_id, Organization.all, :id, :title, prompt: true) %>
  </div>
  <div class="field">
    <label for="user_division">Подразделение</label>
    <%= f.text_field :division %>
  </div>

  <div class="field">
    <label for="user_dob">Дата рождения &nbsp <i>Формат: ГГГГ-ММ-ДД</i></label>
    <%= f.text_field :dob %>
  </div>
  <div class="field">
    <label for="user_permit">Номер пропуска</label>
    <%= f.text_field :permit %>
  </div>
  <div class="field">
   <label for="user_work_status">Статус работы</label>
	<%= f.select :work_status, options_for_select(User::WORK_STATUSES, @user.work_status), {prompt: t('Select')} %>
  </div>

	<label>Права</label>
  <div class="field rights">
    
    <%= hidden_field_tag "user[right_ids][]", nil %>
    <% Right.all.each do |right| %>
    <%= check_box_tag "user[right_ids][]", right.id, @user.right_ids.include?(right.id), id: dom_id(right) %>
    <%= label_tag dom_id(right), right.title %><br>
    <% end %>
  </div>

  <div class="field">
   <label for="user_info">Дополнительная информация</label>
    <%= f.text_area :info, :rows => '3' %>
  </div>


  <div><%= f.submit "Создать пользователя", :class => 'btn btn-large' %></div>
<% end %>