<h2>Организации и структурные подразделения</h2>

<table class="table table-striped">
  <tr>
    <th>Название</th>
	<th>Принадлежность</th>
	<th>Объекты</th>
    <th>Сотрудники</th>
    <th>Детали</th>
    <th>#</th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.title %></td>
	<td><%= if organization.parent_id? 
			Organization.find(organization.parent_id).title
			else 
			'-'
			end %></td>
	<td></td>
	<td></td>
    <td><%= link_to 'Подробнее', organization %></td>
    <td><%= link_to '#', edit_organization_path(organization) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить организацию', new_organization_path %>
