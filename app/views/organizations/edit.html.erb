<div class="container">
  <ul class="row top-pannel clearfix">
    <li class="col-md-8">
      <%= link_to " назад", :back, :class => "btn btn-sm back-btn" %>
      <h1 class="doc_header"><%= @organization.title %><span class="sub-title">(Режим редактирования)</span></h1>
    </li>
    <li class="col-md-4 pull-right">
      <%= render 'shared/user' %>
    </li>
  </ul>
<%= form_for(@organization, :html => {:class => "form row-fuild"}) do |f| %>
   <h2 class="h1">1. Общие данные</h2>
    <div class="form-item"><span class="form-label col-md-5">Полное наименование:</span><%= f.text_field :title, :class => 'form-control col-xs-6' %></div>

    <div class="form-item"><span class="form-label col-md-5">Сокращенное наименование:</span><input class="form-control col-xs-6" placeholder="<%= @organization.title %>" type="text"/></div>

    <div class="form-item"><span class="form-label col-md-5">Форма собственности:</span>
      <select class="form-control col-xs-2" id="" name="">
        <option value="3"><%= @organization.type_of_ownership %></option>
      </select>
    </div>

    <div class="form-item"><span class="form-label col-md-5">Дата постановки на учет в налоговом органе:</span>
     <input class="form-control col-xs-2 hasDatepicker" id="" name="" placeholder="" size="10" type="text">
    </div>

    <div class="form-item"><span class="form-label col-md-5">Налоговый орган, принявший на учет:</span>
     <input class="form-control col-xs-6" id="" name="" placeholder="" size="10" type="text">
    </div>

    <div class="form-item"><span class="form-label col-md-5">Скан свидетельства о постановке на учет в налоговом органе:</span><%= link_to "Скачать", @organization.certificate_of_tax_registration.url(:original, false), {:class => "download-link"} %><input type="file" class="filestyle col-xs-2" data-input="false"/></div>

    <div class="form-item"><span class="form-label col-md-5">Дата решения о создании  рганизации:</span>
     <input class="form-control col-xs-2 hasDatepicker" id="" name="" placeholder="" size="10" type="text">
    </div>

    <div class="form-item"><span class="form-label col-md-5">Скан решения о создании:</span>  <input type="file" class="filestyle col-xs-2" data-input="false"/></div>

    <div class="form-item"><span class="form-label col-md-5">Скан Устава организации:</span><input type="file" class="filestyle col-xs-2" data-input="false"/></div>

    <div class="form-item"><span class="form-label col-md-5">Генеральный директор:</span><input class="form-control col-xs-6 chosen-container chosen-container-multi" placeholder="<%= user_with_full_name_with_middle_name(@organization.director_id) %>" type="text"/></div>

    <!--%= f.collection_select(@organization.director_id, :id, :user_with_full_name_with_middle_name, {multiple: true, :id => "gen_dir_choice", :class => "col-xs-8"}) %>-->

    <div class="form-item"><span class="form-label col-md-5">Главный бухгалтер:</span><input class="form-control col-xs-6" placeholder="<%= user_with_full_name_with_middle_name(@organization.accountant_id) %>" type="text"/></div>

    <!--%= f.collection_select(@organization.accountant_id, :id, :user_with_full_name_with_middle_name, {multiple: true, :id => "gen_dir_choice", :class => "col-xs-8"}) %>-->

    <div class="form-item"><span class="form-label col-md-5">ИНН:</span><input class="form-control col-xs-2" placeholder="<%= @organization.inn %>" type="text"/></div>

    <div class="form-item"><span class="form-label col-md-5">КПП:</span><input class="form-control col-xs-2" placeholder="<%= @organization.kpp %>" type="text"/></div>

    <div class="form-item"><span class="form-label col-md-5">ОГРН:</span><input class="form-control col-xs-2" placeholder="<%= @organization.ogrn %>" type="text"/></div>

    <div class="form-item"><span class="form-label col-md-5">БИК:</span><input class="form-control col-xs-2" placeholder="<%= @organization.bik %>" type="text"/></div>

    <div class="form-item"><span class="form-label col-md-5">Дата постановки в ЕГРЮЛ:</span><input class="form-control col-xs-2 hasDatepicker" id="" name="" placeholder="" size="10" type="text"></div>

    <div class="form-item"><span class="form-label col-md-5">Скан выписки из ЕГРЮЛ:</span><%= link_to "Скачать", @organization.egrul_excerpt.url(:original, false), {:class => "download-link"} %><input type="file" class="filestyle col-xs-2" data-input="false"/></div>
    <ul class="nav nav-pills">
      <li class="col-md-offset-5"><input class="btn btn-default btn-primary btn-sm" name="" type="submit" value="Сохранить"></li>
      <li><a href="#" class="btn-link btn-sm">Отменить изменения</a></li>
    </ul>
   <% end %> 
 </div>   
