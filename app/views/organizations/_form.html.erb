    <label>Принадлежность</label>
    <%= f.select :parent_id, nested_set_options(Organization, @organization) {|i| "#{'-' * i.level} #{i.title}" }, :include_blank => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
