<h5>
  пример инпута c датой
</h5>
<div class="bs-example">
  <div class="input-group">
    <span class="input-group-icon"><i class="fa fa-calendar"></i></span>
    <input class="form-control js-datepicker" placeholder="инпут с датой">
  </div>


  <ul class="nav nav-tabs">
    <li class="active"><a href="#slim" data-toggle="tab">slim</a></li>
    <li><a href="#html" data-toggle="tab">html</a></li>
  </ul>

</div>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="slim">
    <div class="highlight">
      <pre class="prettyprint lang-ruby"><%= html_escape %q{
f.input :date_of_registration, as: :datepicker, wrapper: :icon_prepend, input_wrapper_html: { class: 'col-sm-3' }
      }%></pre>
    </div>
  </div>


  <div class="tab-pane" id="html">
    <div class="highlight">
      <pre class="prettyprint lang-html"><%= html_escape %q{
<div class="input-group">
  <span class="input-group-icon"><i class="fa fa-calendar"></i></span>
  <input class="form-control js-datepicker" placeholder="инпут с датой">
</div>
      }%></pre>
    </div>
  </div>
</div>