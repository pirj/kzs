<!DOCTYPE html>
<html>
<head>
  <title>Kzs</title>

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>

</head>
<body>
<div>
  <% unless controller?('devise/sessions')  %>
  <div id="sidebar">
    <%= render 'shared/left' %>
  </div>
  <% end %>

  <div class="page">
    <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <% if alert %>
        <div class="alert alert-error"><%= alert %></div>
    <% end %>

    <%= yield %>
  </div>

</div>
</body>
</html>
