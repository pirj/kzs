      /    span.widget-name
      /      | Организации и сотрудники
      /
      /li data-row='5' data-col='1' data-sizex='1' data-sizey='1' class='widget widget-library disable'
      /  a href='#'
      /    span.widget-name
      /      | Библиотека
      /
      /li data-row='4' data-col='1' data-sizex='1' data-sizey='1' class='widget widget-security disable'
      /  a href='#'
      /    span.widget-name
      /      | Охрана
      /
      /li data-row='1' data-col='6' data-sizex='1' data-sizey='1' class='widget widget-profile disable'
      /  a href='#'
      /    span.widget-name
      /      | Профиль
      /
      /li data-row='2' data-col='1' data-sizex='1' data-sizey='1' class='widget widget-chat disable'
      /  a href='#'
