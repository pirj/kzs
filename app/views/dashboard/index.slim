      /
      /li data-row='2' data-col='2' data-sizex='2' data-sizey='2' class='widget widget-weather'
      /  div.status.text-right
      /    .temp.j-temp
      /      span.num
      /    .text.j-status
      /
      /  div.date.text-left
      /    = t(Time.now.strftime('%A'))
