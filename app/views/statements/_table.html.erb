<table class="table permits_table" style="font-size: 12px; width: 900px;">
  	 <tr>
	    <th><%= sortable "id", "ID" %></th>
			<th><%= sortable "sender_organization_id", "Отправитель" %></th>
			<th><%= sortable "organization_id", "Получатель" %></th>
	    <th>Тип</th>
	    <th><%= sortable "title", "Тема письма" %></th>
	    <th>Детали</th>
	    <th><%= sortable "created_at", "Дата/Время" %></th>
	    <th><%= sortable_status %></th>
	  </tr>

  	<% @statements.each do |statement| %>
  	  <tr>
  		  <td><%= statement.id %></td>
  	    <td><%= organization(statement.sender_organization_id) %></td>
  	    <td><%= organization(statement.organization_id) %></td>
  		  
  	    <td><span class="label label-warning">Акт</span></td>
  	    <td><%= statement.title %></td>
  	    <td><%= link_to "Подробнее", statement %></td>
  	    <td><%= Russian::strftime(statement.created_at, "%d %B %Y %H:%M") %></td>
  	    <td class="status"><%= statement_status(statement) %></td>
  	  </tr>
  	<% end %>
</table>