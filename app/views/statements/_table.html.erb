<table class="table dynamic-table default-table" id="<%= @controller %>">
  <thead>
  	 <tr>
  	   <% unless action?('show') %>
           <th width="50"><label class=""><%= check_box_tag "statement_ids[]", nil, nil, :id => "select_all_statements" %>
             <span class="checkbox-label"></span>
           </label></th>
       <% end %>
	    <th width="120"><%= sortable "id", "Номер / Дата" %></th>
			<th width="130"><%= sortable "sender_organization_id", "Отправитель" %></th>
			<th width="130"><%= sortable "organization_id", "Получатель" %></th>
	    <th width="240"><%= sortable "title", "Тема" %></th>
	    <th width="200">Тип</th>
	    <th width="100"><%= sortable_status %></th>
	  </tr>
	</thead>
	<tbody>
  	<% @statements.each do |statement| %>
  	  <tr id="<%= statement.id %>" <%= new_document(statement) %>>

  	    <% unless action?('show') %>
            <td class="not_this">
              <label class=""><%= check_box_tag "statement_ids[]", statement.id, nil, :class => 'statement_operation' %>
                <span class="checkbox-label"></span>
              </label></td>
        <% end %>
  		  <td><a href="/statements/<%= statement.id %>"><%= statement.id %></a> / <%= Russian::strftime(statement.created_at, "%d.%m.%y") %></td>

  	    <td><%= organization(statement.sender_organization_id) %></td>
  	    <td><%= organization(statement.organization_id) %></td>
  	    <td><%= statement.title %></td>
  	    <td><span class="label label-warning">Акт</span></td>
  	    <td class="status"><%= statement_status(statement) %></td>


        <td colspan="9" class="inform">
          <div class="col-md-8">
            <ul class="doc-info">
              <li>
                <span class="title">Номер и дата:</span><span class="value"><a href="#"><%= statement.id %></a> / <%= if statement.sent_date then
                                                                                                                       statement.sent_date.strftime('%d.%m.%Y')
                                                                                                                     else
                                                                                                                       'Дата не присвоена'
                                                                                                                     end %></span>
              </li>
              <li>Тип документа: Акт</li>
              <li> <%= statement_status(statement) %></li>
              <li><span class="title">Тема:</span>
						<span class="value">
						  <span class="h3"><%= statement.title %></span>
							<ol class="breadcrumb">
                              <li><%= link_to organization_full_title(statement.sender_organization_id), organization_path(statement.sender_organization_id), :target => '_blank' %></li>
                              <li><%= link_to organization_full_title(statement.organization_id), organization_path(statement.organization_id), :target => '_blank' %></li>
                            </ol>
						</span>
              </li>
              <li>
                <span class="title valign-mid">Исполнитель:</span>

                <div class="user value">
                  <span class="photo"> <i class="default-user" ></i></span>
                  <a href="#" class="name"><%= user_with_full_name(statement.approver_id) %></a>

                </div>
              </li>
              <li><span class="title valign-mid">Отправитель:</span>

                <div class="user value">
                  <span class="photo">
                    <i class="default-user"></i>
                  </span>
                  <a href="#" class="name">
                    <%= user_with_full_name(statement.user_id) %>
                  </a>
                </div>
              </li>

            </ul>
            <div class="nav-pills nav controls">
              <!--<a class="btn btn-default">История переписки</a>-->
              <a class="btn btn-default" href="/<%= @controller %>/<%= statement.id %>">Открыть</a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="view-main-doc">
              <div class="overlay"><a href="/<%= @controller %>/<%= statement.id %>.pdf" target="_blank" class="zoom"></a></div>
              <iframe style="width: 190px; height: 264px;" />
              </iframe>

            </div>
          </div>
          <!-- <div class="inform-hide">Close</div> -->
        </td>
  	  </tr>
  	<% end %>
  	</tbody>
</table>