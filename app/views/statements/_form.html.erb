<div class="container">


  


		<div>
		  
		  <% if @statement.errors.any? %>
        <div id="error_explanation">
          <h4 style="color: #9a0000;">Пожалуйста, исправьте некорректные поля:</h4>

          <ul>
          <% @statement.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
		  
			<%= form_for(@statement) do |f| %>
			
			<%= f.collection_select(:document_ids, @writs, :id, :title, {:selected => @statement.document_id}, {multiple: true, :style=>'width:544px', :'data-placeholder' => "Выберите распоряжение"}) %>
			
			<%= f.collection_select(:internal_approver_id, @approvers, :id, :first_name_with_last_name, {:selected => @statement.approver_id}, {multiple: true, :style=>'width:544px', :'data-placeholder' => "Выберите контрольное лицо"}) %>
			
      <%= f.collection_select(:approver_ids, @acceptors, :id, :first_name_with_last_name, {:selected => @statement.user_ids}, {multiple: true, :style=>'width:544px', :'data-placeholder' => "Выберите согласующих лиц"}) %>
      
			
			<%= f.text_field :title, :class => 'input-xxlarge', :placeholder => 'Укажите заголовок акта..' %>
			
			<%= f.cktext_area :text, :class => 'input-xxlarge letter_input', :placeholder => 'Текст акта', :rows => "20" %>
			
			
      <%= render 'actions_form', :f => f %>
		
			<% end %>
	</div>

</div>