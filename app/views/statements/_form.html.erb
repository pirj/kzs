<div class="row">
	
 <%= render 'shared/left' %>
	
	<div class="span8">

  <%= render 'shared/user' %>
  
  <h1 class="doc_header">
	  <% if action?('new') %>
			Новый АКТ
		<% else %>
		  ФСО
		<% end %>
	<span class="caret"></span></h1>
		
		<div class="btn-toolbar">
			<div class="btn-group">	
				<%= link_to " назад", :back, :class => "btn" %>
			</div>
			
      <!-- <div class="btn-group">  
        <a class="btn btn-success" href="javascript:if(window.print)window.print()" style="margin-left: 20px"><%= image_tag('print.png') %></a>
      </div> -->
			
		</div>
		
		<div>
			<%= form_for(@statement) do |f| %>
			
				<%= f.collection_select(:document_ids, Document.writs, :id, :title, {:selected => @statement.document_id}, {multiple: true, :style=>'width:544px', :'data-placeholder' => "Выберите распоряжение"}) %>
			
			<%= f.text_field :title, :class => 'input-xxlarge', :placeholder => 'введите тему письма...' %>
			
			<%= f.cktext_area :text, :class => 'input-xxlarge letter_input', :placeholder => 'Текст акта', :rows => "20" %>
			
			
			<div class="btn-toolbar">
				
				<div class="btn-group">	
					<%= f.submit "подготовить", :class => "btn btn-success", :name => "prepare" %>
				</div>
				
				<div class="btn-group" style="margin-left: 10px;">	
					<%= f.submit "в черновики", :class => "btn btn-primary" %>
				</div>
				
				<% unless @statement.sent? || action?('new') %>
				<div class="btn-group"   style="margin-left: 10px">	
					<%= link_to 'Удалить', delete_document_path(@statement), :class => "btn btn-danger" %>
				</div>
				<% end %>

		    </div>
		
			<% end %>
	</div>	
</div>
