<%= form_for(@statement) do |f| %>
  <h3><%= @statement.title %></h3>
  <%= statement_status(@statement) %><br>
  <%= Russian::strftime(@statement.created_at, "%d %B %Y, %H:%M") %><br>
	Организация-отправитель: <%= organzation_title_by_user_id(@statement.user_id) %><br>

	

  <% if @statement.organization_id? %>
  <b>Организация-получатель: </b><%= organization(@statement.organization_id) %>
  <% end %>

	<%= @statement.text.html_safe %>
	
	<h4>Согласование</h4>
	<ul>
	  <% @statement.statement_approvers.each do |approver| %>
	    <li><%= statement_approver(approver) %>: <%= statement_approver_status(approver) %></li>
	  <% end %>
	</ul>
	
	    

  <%= render 'actions' %>

<% end %>

