<td colspan="8" class="inform">
  <div class="col-md-8">
    <ul class="doc-info">
      <li><span class="title">Номер и дата:</span><span class="value"><a href="#"><%= @statement.id %></a> / <%= if @statement.approved_date then @statement.approved_date.strftime('%d.%m.%Y') else 'Дата не присвоена' end %></span></li>
      <li><span class="title">Тема:</span>
					<span class="value">
					  <span class="h3"><%= @statement.title %></span>
						<ol class="breadcrumb">
              <li><%= link_to organization_full_title(@statement.sender_organization_id), organization_path(@statement.sender_organization_id), :target => '_blank' %></li>
              <li><%= link_to organization_full_title(@statement.organization_id), organization_path(@statement.organization_id), :target => '_blank' %></li>
            </ol>
					</span>
      </li>
      <li>
        <span class="title valign-mid">Контрольное лицо:</span>
        <div class="user value">
          <span class="photo"> <img alt="" src="data:image/png;base64," /></span>
     <!--//     <a href="#" class="name "><%= user_with_full_name(@statement.approver_id)%></a>-->
          <%= link_to user_with_full_name(@statement.approver_id), user_path(@statement.approver_id), :class => 'name', :target => '_blank' %>
        </div>
      </li>

      <% @statement.users.each.with_index(1) do |user, i| %>
          <li>
            <span class="title valign-mid">Контролер №<%= i %>:</span>

            <div class="user value">
            <span class="photo">
              <img alt="" src="data:image/png;base64," />
            </span>
              <%= link_to user_with_full_name(user), user_path(user), :class => 'name', :target => '_blank' %>
            </div>
          </li>
      <% end %>


    </ul>
    <div class="nav-pills nav controls">


      <a class="btn btn-default" href="statements/<%= @statement.id %>">Открыть</a>

    </div>
  </div>
  <div class="col-md-4">
    <div class="view-main-doc">





    </div>
  </div>
</td>