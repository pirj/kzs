if ($('#<%= @statement.id %>').find('.inform').length > 0 ) {
    $('#<%= @statement.id %> .inform').remove();
    $('#<%= @statement.id %>').children('td').show();
}
else
{

    $('.inform').remove();
    $('.dynamic-table.table td').show();
    $('#<%= @statement.id %>').children('td').hide();
    $('<%=j render :partial => 'full_element', :@statement => @statement %>').appendTo("#<%= @statement.id %>");

}